<idea-plugin>
    <id>de.DuckAndPlatypus.ErrorPrinterPlugin</id>
    <name>Real Error Printer</name>
    <vendor>Duck'n'Platypus</vendor>

    <description>This is 40 something length description of our project.<!-- [CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
    ]]> --></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <applicationConfigurable instance="ErrorPrinterSettingsConfigurable"
                                displayName="Real Error Printer"/>
    </extensions>

    <actions>
        <action id="ErrorPrintAction" class="ErrorPrintAction" text="ErrorPrintAction">
            <add-to-group group-id="Runner.View.Toolbar" anchor="first"/>
        </action>
    </actions>
</idea-plugin>